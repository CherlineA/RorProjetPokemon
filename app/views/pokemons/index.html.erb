<p id="notice"><%= notice %></p>

<h1>Pokemons</h1>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Nom</th>
      <th>Hp</th>
      <th>Attack</th>
      <th>Defense</th>
      <th>Speattack</th>
      <th>Spedefense</th>
      <th>Vitesse</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.numero %></td>
        <td><%= pokemon.nom %></td>
        <td><%= pokemon.hp %></td>
        <td><%= pokemon.attack %></td>
        <td><%= pokemon.defense %></td>
        <td><%= pokemon.speAttack %></td>
        <td><%= pokemon.speDefense %></td>
        <td><%= pokemon.vitesse %></td>
        <td><%= pokemon.total %></td>
        <td><%= link_to 'Show', pokemon %></td>
        <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
        <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

